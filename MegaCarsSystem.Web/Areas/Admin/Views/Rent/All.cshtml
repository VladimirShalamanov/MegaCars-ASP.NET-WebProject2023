@model IEnumerable<RentViewModel>
@{
    ViewBag.Title = "All Rents";
}
<h2 class="text-center">@ViewBag.Title</h2>

<hr />

<div class="row">

    @foreach (var rent in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img class="card-img-top" src="@rent.ImageUrl" alt="Car Image">
                <div class="card-body text-center bg-black">
                    <h4>@rent.Title</h4>
                    <h6>Dealer: <b>@rent.DealerFullName (@rent.DealerEmail)</b></h6>
                    <h6>Rented By: <b>@rent.RenterFullName (@rent.RenterEmail)</b></h6>
                </div>
            </div>
        </div>
    }
</div>