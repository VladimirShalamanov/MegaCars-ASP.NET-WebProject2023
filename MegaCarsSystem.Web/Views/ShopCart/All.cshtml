@model IEnumerable<ItemsForShopCartViewModel>

@{
    ViewBag.Title = "Your Shop Cart";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!Model.Any())
{
    <p class="text-center">
        Your cart is empty.
        <br>
        Click <a href="/Product/All" style="color: magenta"
                 onmouseover="this.style.textDecoration='none';"
                 onmouseout="this.style.textDecoration='underline';">here</a> for continue your shopping.
    </p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr class="text-white">
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-white">
                    <td><img src="@item.Image" alt="Item Image" width="50" height="50" /></td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td style="display: flex;">
                        <form asp-controller="ShopCart" asp-action="DecreaseQuantity" asp-route-id="@item.Id" style="text-decoration: none">
                            <button type="submit" class="btn-icon" style="border: none; background-color: transparent;">
                                <i class="fa-regular fa-square-minus" style="color: magenta"></i>
                            </button>
                        </form>
                        @item.Quantity
                        
                        <form asp-controller="ShopCart" asp-action="IncreaseQuantity" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn-icon" style="border: none; background-color: transparent;">
                                <i class="fa-regular fa-square-plus" style="color: magenta"></i>
                            </button>
                        </form>
                    </td>
                    <td>@(item.Price * item.Quantity)</td>
                    <td>
                        <form asp-controller="ShopCart" asp-action="RemoveFromCart" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn-icon" style="border: none; background-color: transparent;">
                                <input class="btn btn" type="submit" value="Leave" />
                                <i class="fa-solid fa-trash-can" style="color: red"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="6"></td>
            </tr>
            <tr class="text-white">
                <td colspan="4" style="text-align: right;"><strong>Total:</strong></td>
                <td>
                    @Model.Sum(item => item.Price * item.Quantity)
                </td>
                <td></td>
            </tr>
        </tbody>
    </table>
}