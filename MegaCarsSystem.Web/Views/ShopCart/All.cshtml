@model IEnumerable<ItemsForShopCartViewModel>

@{
    ViewBag.Title = "Your Shop Cart";
}

<div class="containerShopCart">
    <div class="checkoutLayout">
        <div class="returnCart">

            <a href="/">Keep shopping</a>
            <h1>@ViewBag.Title</h1>

            <div class="list">
                <div class="item">
                    @foreach (var item in Model)
                    {
                        <img src="@item.Image" alt="" />
                        <div class="info">
                            <div class="name">@item.Name</div>
                            <div class="price">@item.Price</div>
                        </div>
                        <div class="quantity">
                            <form asp-controller="ShopCart" asp-action="DecreaseQuantity" asp-route-id="@item.Id" style="text-decoration: none">
                                <button type="submit" class="btn-icon" style="border: none; background-color: transparent;">
                                    <i class="fa-regular fa-square-minus" style="color: magenta"></i>
                                </button>
                            </form>

                            @item.Quantity

                            <form asp-controller="ShopCart" asp-action="IncreaseQuantity" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn-icon" style="border: none; background-color: transparent;">
                                    <i class="fa-regular fa-square-plus" style="color: magenta"></i>
                                </button>
                            </form>
                        </div>
                        <div class="returnPrice">$44</div>
                    }
                </div>
            </div>
        </div>          

        <div class="right">
            <h1>CHECKOUT</h1>

            <div class="form">
                <div class="group">
                    <label for="">Full Name</label>
                    <input type="text" name="" id="">
                </div>
                <div class="group">
                    <label for="">Phone Num</label>
                    <input type="text" name="" id="">
                </div>
                <div class="group">
                    <label for="">Address</label>
                    <input type="text" name="" id="">
                </div>
                <div class="group">
                    <label for="">Country</label>
                    <input name="" id="">
                    <select>
                        <option value="">Choose...</option>
                        <option value="Kalofer">Kalofer</option>
                    </select>
                </div>
                <div class="group">
                    <label for="">City</label>
                    <input name="" id="">
                    <select>
                        <option value="">Choose...</option>
                        <option value="Kalofer">Kalofer</option>
                    </select>
                </div>
            </div>
            
            <div class="return">
                <div class="row">
                    <div>Total Quantity</div>
                    <div>Total Price</div>
                </div>
                <div class="row">
                    <div class="totalQuantity">8</div>
                    <div class="totalPrice">$99</div>
                </div>
            </div>
            <button class="buttonCheckout">
                CHECKOUT
            </button>
        </div>
           
    </div>
</div>           

