@model AllCarsQueryModel

@{
    ViewBag.Title = "All Cars";
    string firstLetterBrand = string.Empty;
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="get">


    <div class="d-flex justify-content-md-center">
        <div class="form-group col-md-3">
            <label asp-for="SearchString"></label>
            <input asp-for="SearchString" class="form-control" placeholder="...">
        </div>
    </div>

    <div class="d-flex justify-content-md-center">
        <div class="form-group">
            <input type="submit" value="&#x1F50E;" class="btn" />
        </div>
    </div>



    <div class="container">
        <div class="row">
            <div class="dropdown">
                <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filters
                </button>

                <ul class="dropdown-menu col-md-12" aria-labelledby="dropdownMenuButton">

                    <div class="row">
                        <div class="col-md-2">

                            <div class="form-group">
                                <label asp-for="Category"></label>
                                <select asp-for="Category" class="form-control">
                                    <option value="">All</option>

                                    <optgroup label="Car Type"></optgroup>
                                    @foreach (var category in Model.Categories)
                                    {
                                        if (category.StartsWith("SUV"))
                                        {
                                            <optgroup label="Jeep Type"></optgroup>
                                        }

                                        <option value="@category">&nbsp;&nbsp;&nbsp;@category</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label asp-for="Engine"></label>
                                <select asp-for="Engine" class="form-control">
                                    <option value="">All</option>
                                    @foreach (var engine in Model.Engines)
                                    {
                                        <option value="@engine">@engine</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label asp-for="Gearbox"></label>
                                <select asp-for="Gearbox" class="form-control">
                                    <option value="">All</option>
                                    @foreach (var gearbox in Model.Gearboxes)
                                    {
                                        <option value="@gearbox">@gearbox</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-md-2">

                            <div class="form-group">
                                <label asp-for="Brand"></label>
                                <select asp-for="Brand" class="form-control">
                                    <option value="">All</option>
                                    @foreach (var brand in Model.Brands)
                                    {
                                        if (string.IsNullOrEmpty(firstLetterBrand) ||
                                        firstLetterBrand[0] != brand[0])
                                        {
                                            <optgroup label=@brand[0]></optgroup>
                                            firstLetterBrand = brand;
                                        }

                                        <option value="@brand">&nbsp;&nbsp;&nbsp;@brand</option>
                                    }
                                </select>
                            </div>

                        </div>

                        <div class="col-md-2">

                            <div class="form-group">
                                <label asp-for="CarSorting"></label>
                                <select asp-for="CarSorting" class="form-control">
                                    <option value="0">Newest</option>
                                    <option value="1">Oldest</option>
                                    <option value="2">Price - Ascending</option>
                                    <option value="3">Price - Descending</option>
                                    <option value="4">Not rented first</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label asp-for="CarsPerPage"></label>
                                <select asp-for="CarsPerPage" class="form-control">
                                    <option value="3">3</option>
                                    <option value="6">6</option>
                                    <option value="9">9</option>
                                </select>
                            </div>

                        </div>
                    </div>

                </ul>
            </div>
        </div>
    </div>
</form>

<hr />

@{
    int previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }
    int maxPage = (int)Math.Ceiling((double)Model.TotalCars / Model.CarsPerPage);
}

<div class="row mb-5">
    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Car"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-category="@Model.Category"
           asp-route-searchTerm="@Model.SearchString"
           asp-route-sorting="@((int)Model.CarSorting)"><<</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage || !Model.Cars.Any();
    }

    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary
           @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
           asp-controller="Car"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-category="@Model.Category"
           asp-route-searchTerm="@Model.SearchString"
           asp-route-sorting="@((int)Model.CarSorting)">>></a>
    </div>
</div>

@if (!Model.Cars.Any())
{
    <h2 class="text-center">No cars found by the given criteria!</h2>
}

<div class="row">
    @foreach (var car in Model.Cars)
    {
        <partial name="_CarPartial" model="@car" />
    }
</div>