@using MegaCarsSystem.Services.Data.Interfaces;
@using MegaCarsSystem.Web.Infrastructure.Extensions;
@model IEnumerable<IndexViewModel>

@inject IAgentService AgentService

@{
    ViewBag.Title = "Home Page";

    var cars = Model.ToList();
    bool isUserAgent = await AgentService.AgentExistsByUserIdAsync(this.User.GetId()!);
}

@if (!cars.Any())
{
    <div class="mt-4 p-5 bg-light">
        <h1 class="display-4">Welcome to the best place for renting cars!</h1>
        <p class="lead">
            There are no cars in the system currently available
            so why don't you just add one?
        </p>

        <hr class="my-4">
        <p class="lead">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                @if (isUserAgent)
                {
                    <a asp-controller="Car" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Car</a>
                }
            }
        </p>
    </div>
}
<div class="mb-5"></div>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < cars.Count(); i++)
        {
            var car = cars[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:700px"
                     src="@car.ImageUrl" alt="@car.Brand">
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Car" asp-action="Details" asp-route-id="@car.Id"> @car.Brand</a>
                    </h5>
                </div>
            </div>
        }
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>

    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="mb-5"></div>

<div class="row">
    <div class="col-12 text-center">
        <button class="btn btn-primary" id="statistics_btn">Show Statistics</button>
    </div>
</div>

<div class="mt-4 p-5 bg-light d-none" id="statistics_box">
    <div class="row">
        <h2 class="col-md-6 text-center" id="total_cars"></h2>
        <h2 class="col-md-6 text-center" id="total_rents"></h2>
    </div>
</div>

@section Scripts
    {
    <script>statistics();</script>
}